<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label 'Número de cuenta', for: :id %>
    <%= f.number_field :id, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Contraseña', for: :password %>
    <%= f.password_field :password, required: true,  class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Iniciar sesión", class: "btn btn-block form-control text-light", style: "background: #958419;" %>
  </div>
<% end %>