<% if @viaje %>
  <div class="row">
    <div class="col-sm-12 text-center">
      <p class="lead text-center">
        <div class="display-4 text-center"><%= @viaje.time_limit.strftime('%I:%M %p') %></div><br>
        <div class="font-weight-bold text-center">Lugar de partida:</div><div class="text-center"><%= @viaje.place.name %></div><br>
        <div class="font-weight-bold text-center">Descripción:</div> <%= @viaje.description %>
      </p>
    </div>
    <div class="col-sm-6">
      <h1 class="text-center">Conductor</h1>
      <%= render "users/user", user: @viaje.user %>
    </div>
    <div class="col-sm-6">
      <h1 class="text-center">Vehículo</h1>
      <%= render "vehicles/vehicle", vehicle: @viaje.user.vehicle %>
    </div>
  </div>
<% end %>