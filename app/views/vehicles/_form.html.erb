<%= form_for(vehicle) do |f| %>

  <div class="form-group">
    <%= f.label "Modelo", for: :model %>
    <%= f.text_field :model, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Color", for: :color %>
    <%= f.text_field :color, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Fotografía del vehículo", for: :foto %>
    <%= f.file_field :foto, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Enviar", class: "btn btn-block text-light form-control", style: "background: #958419;" %>
  </div>

<% end %>