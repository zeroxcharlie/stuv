<% unless user.vehicle %>
  <p class="lead text-center">Aun no has agregado ningun vehículo</p>
  <a href="<%= new_vehicle_path %>" class="btn btn-success btn-block">Añadir vehículo</a>
<% else %>
<div class="row mx-auto">
  <div class="col-sm-12">
    <div class="text-center">
      <h1 class="display-4">Mi Vehículo</h1>
    </div>
  </div>
  <div class="col-sm-12">
    <%= render "vehicles/vehicle", vehicle: user.vehicle %>
  </div>
    <%= link_to "Eliminar vehículo", vehicle_path(user.vehicle), method: :delete, class: "btn btn-block btn-danger" %>
</div>
<% end %>